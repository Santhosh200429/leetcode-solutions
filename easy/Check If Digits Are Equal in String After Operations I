"""
Problem: <Check If Digits Are Equal in String After Operations I>
Platform: LeetCode
Difficulty: Easy
Author: Santhosh
"""

class Solution(object):
    def hasSameDigits(self, string):
        index =0
        result=""
        while len(string) > 2 and index < len(string) -1 :
          result += str((int (string[index]) + int (string[index+1])) % 10)
          index +=1 
          if index == len(string) - 1:
            string = result
            index = 0
            result=""
        return len(string) == 2 and string[0] == string[1]
        
