"""
Problem: <Remove Element>
Platform: LeetCode
Difficulty: Easy
Author: Santhosh

"""

class Solution:
    def removeElement(self, numbers, value_to_remove):
        new_index = 0
        
        for current_index in range(len(numbers)):
            if numbers[current_index] != value_to_remove :
                numbers[new_index] = numbers[current_index]
                new_index += 1

        return new_index
