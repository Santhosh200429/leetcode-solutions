"""
Problem: <Search Insert Position>
Platform: LeetCode
Difficulty: Easy
Author: Santhosh
"""

class Solution(object):
    def searchInsert(self, nums, target):
        left, right = 0, len(nums) - 1

        while left <= right:
            mid = (left + right) // 2
            if nums[mid] == target:  # fixed variable name
                return mid
            elif nums[mid] < target:
                left = mid + 1
            else:
                right = mid - 1

        return left  # correct indentation
